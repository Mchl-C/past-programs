<HoverButton>:
    size_hint: 0.9, None
    height: 50
    pos_hint: {'center_x': 0.5, 'y': 0.02}
    text: "Add New Item"
    background_color: (0.2, 0.6, 1, 1)  # Default color
    
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
    
    canvas.after:
        Color:
            rgba: self.effect_color
        Ellipse:
            pos: (self.center_x - self.effect_radius, self.center_y - self.effect_radius)
            size: (self.effect_radius * 2, self.effect_radius * 2)

<Point>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 100  # Increased to accommodate both labels
    spacing: 10
    padding: [20, 5]  # Added vertical padding

    # Left side - Checkbox
    CheckBox:
        size_hint_x: None
        width: 30
        pos_hint: {'center_y': 0.5}
        on_active: root.checkbox_click(self, self.active)

    # Right side - Text content
    BoxLayout:
        orientation: 'vertical'
        spacing: 0  # Remove spacing between labels
        size_hint_x: 0.9  # Use most of available width
        padding: [0, 5, 0, 5]  # Top/bottom padding

        # Main task label
        Label:
            id: status_label
            text: root.apasih
            size_hint_y: None
            height: 40  # Fixed height
            halign: 'left'
            font_name: 'Roboto'
            font_size: '24sp'
            text_size: self.width, None

        # Description label
        Label:
            id: desc
            text: root.desc
            size_hint_y: None
            height: 30  # Fixed height
            halign: 'left'
            font_name: 'Roboto'
            font_size: '18sp'
            text_size: self.width, None
            padding: [0, 0, 0, 0]  # Negative top padding to pull up

<InputDialog@FloatLayout>:
    size_hint: 0.4, 0.3
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
        Color:
            rgba: 0.8, 0.8, 0.8, 1
        Line:
            rounded_rectangle: [self.x, self.y, self.width, self.height, 10]
            width: 1.5

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.9, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        spacing: 10

        TextInput:
            id: task_input
            hint_text: "Enter task"
            size_hint_y: 0.2
            #height: 60
            background_normal: ''
            background_color: 1, 1, 1, 0.8
            padding: [10, 10]

            write_tab: False
            on_text: self.hint_text = "" if self.text else "Enter task"

        TextInput:
            id: desc_input
            hint_text: "Enter description"
            size_hint_y: 0.4
            #height: 100
            background_normal: ''
            background_color: 1, 1, 1, 0.8
            padding: [10, 10]
            write_tab: False
            on_text: self.hint_text = "" if self.text else "Enter task"

    BoxLayout:
        size_hint: None, None
        size: 100, 40
        pos_hint: {'right': 0.95, 'y': 0.05}
        spacing: 5

        Button:
            id: cancel_btn
            text: "✕"
            background_normal: ''
            background_color: 0.9, 0.3, 0.3, 1
            color: 1, 1, 1, 1
            size_hint_x: None
            width: 40

        Button:
            id: submit_btn
            text: "✓"
            background_normal: ''
            background_color: 0.3, 0.7, 0.3, 1
            color: 1, 1, 1, 1
            size_hint_x: None
            width: 40

<ToDo>:
    container: container
    
    RelativeLayout:
        size_hint: 1, 1
        
        # Background Label (bottom layer)
        Label:
            text: "Content above background"
            size_hint: 1, None
            height: 40
            pos_hint: {'top': 1}
            color: 1, 1, 1, 1
            
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'board.png'
                Color:
                    rgba: 1, 1, 1, 0.3
                Rectangle:
                    pos: self.pos
                    size: self.size
        
        # ScrollView (middle layer)
        ScrollView:
            size_hint: 1, 0.9
            pos_hint: {'top': 1}
            do_scroll_x: False
            
            BoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: [0, 40, 0, 60]  # Top padding for label

        